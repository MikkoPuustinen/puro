	audio_ = audio;
}
void
Idea::SetEnvelope(Passage* envelope) {
	envelope_ = envelope;
}
*/
bool
Idea::IsValid() {
	std::cout<< "Is idea valid?" << std::endl;
	bool is_valid = idea_
	return (idea_) && (material_)
			&& (audio_->GetSize()>1) && (envelope_->GetSize()>1);
}
