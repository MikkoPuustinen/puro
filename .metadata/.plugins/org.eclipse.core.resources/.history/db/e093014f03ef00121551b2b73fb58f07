#include "Idea.h"

Idea::Idea() {
	Initialize();
}

Idea::~Idea() {
  // free Passages?
}

void
Idea::Initialize() {
	idea_ = 0;
	material_ = 0;
	audio_ = 0;
	envelope_ = 0;
}

Tag
Idea::GetIdea() {
	return idea_;
}
Tag
Idea::GetMaterial() {
	return material_;
}
Passage
Idea::GetAudio() {
	return audio_;
}
Passage
Idea::GetEnvelope() {
	return envelope_;
}

void
Idea::SetIdea(Tag idea) {
	idea_ = idea;
}
void
Idea::SetMaterial(Tag material) {
	material_ = material;
}
void
Idea::SetAudio(Passage audio) {
	audio_ = audio;
}
void
Idea::SetEnvelope(Passage envelope) {
	envelope_ = envelope;
}
bool
Idea::IsValid() {
	return (idea_) && material_ && audio_ && envelope_;
}
